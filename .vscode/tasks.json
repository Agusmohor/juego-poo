{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build-juego-poo",
            "command": "C:/msys64/ucrt64/bin/g++.exe",
            "args": [
    "-fdiagnostics-color=always",
    "-g",
    "-std=c++20",

    // LISTA REAL DE CPP
    //"${workspaceFolder}/src/main.cpp",
    //"${workspaceFolder}/src/Game.cpp",
    //"${workspaceFolder}/src/Player.cpp",
    //"${workspaceFolder}/src/Match.cpp",
    "${workspaceFolder}/src/*.cpp",

    // -- CONFIGURACIÓN SFML: RESTAURAR LAS RUTAS --

    // Bandera -I para los includes (archivos .hpp)
    "-I", "C:/msys64/ucrt64/include", 
    // AGREGAR: Ruta de tus headers de SFML
    "-I", "C:/SFML-3.0.2/include",

    // Bandera -L para las librerías (archivos .lib/.a)
    "-L", "C:/msys64/ucrt64/lib",
    // AGREGAR: Ruta de tus librerías de SFML
    "-L", "C:/SFML-3.0.2/lib",

    // Bandera -l para enlazar módulos de SFML
    "-lsfml-graphics",
    "-lsfml-window",
    "-lsfml-system",

    // Bandera -o para el ejecutable final
    "-o", "${workspaceFolder}/build/juego-poo.exe"
],
     "options": {
    "shell": {
        "executable": "C:/Windows/System32/cmd.exe",
        "args": ["/c"]
    }
},
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}